<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/vanbora"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vanbora"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_get_user_by_id"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.GetAllUsersActivity"
            android:exported="false"
            android:label="@string/title_activity_get_all_users"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.VanComplements"
            android:exported="false"
            android:label="@string/title_activity_van_complements"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.UserActivityComplements"
            android:exported="false"
            android:label="@string/title_activity_user_complements"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.DriverActivityComplements"
            android:exported="false"
            android:label="@string/title_activity_driver_complements"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.SelectActivity"
            android:exported="false"
            android:label="@string/title_activity_select"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Vanbora" />
        <activity
            android:name=".ui.activities.GetUserById"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Vanbora">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>